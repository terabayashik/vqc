{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "all": true,
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "all": true,
        "useImportExtensions": "off",
        "noUndeclaredDependencies": "off"
      },
      "style": {
        "all": true,
        "noNamespaceImport": "off",
        "noImplicitBoolean": "off",
        "useFilenamingConvention": "off",
        "useNamingConvention": "off"
      },
      "suspicious": {
        "all": true,
        "noConsole": "off",
        "noConsoleLog": "off",
        "noReactSpecificProps": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
